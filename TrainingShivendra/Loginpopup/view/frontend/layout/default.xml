<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="register-link">
            <arguments>
                <argument name="class" xsi:type="string">customer-register-link</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="authorization-link-login">
            <arguments>
                <argument name="class" xsi:type="string">customer-login-link</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="TrainingShivendra\Loginpopup\Block\Form\Login" name="customer-popup-login" template="TrainingShivendra_Loginpopup::login.phtml" />
            <block class="TrainingShivendra\Loginpopup\Block\Form\Register" name="customer-popup-register" template="TrainingShivendra_Loginpopup::register.phtml" />
        </referenceContainer>
    </body>
</page>
